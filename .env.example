# ============================================
# Khalifa Pharmacy System - Environment Variables
# ملف التكوين المركزي لنظام صيدليات خليفة
# ============================================

# ============================================
# Security - الأمان
# ============================================
# مفتاح API مشترك بين Django و WPPConnect
WHATSAPP_API_KEY=khalifa-pharmacy-secret-key-2025

# Django Secret Key
DJANGO_SECRET_KEY=django-insecure-your-secret-key-here-change-in-production

# ============================================
# Django Settings
# ============================================
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=*

# ============================================
# Database Configuration
# ============================================
# Options: sqlite3, postgresql, mysql
DB_ENGINE=postgresql
DB_NAME=khalifa_pharmacy_db
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# Connection Settings
DB_CONN_MAX_AGE=600
DB_CONN_TIMEOUT=10

# For SQLite (Development Only):
# DB_ENGINE=sqlite3
# DB_NAME=db.sqlite3

# ============================================
# WPPConnect Settings
# ============================================
WPPCONNECT_PORT=3000
WPPCONNECT_HOST=localhost
WPPCONNECT_SESSION_NAME=khalifa-pharmacy

# Django Backend URL (for WPPConnect to send webhooks)
DJANGO_BACKEND_URL=http://127.0.0.1:8000
DJANGO_WEBHOOK_ENDPOINT=/api/whatsapp/webhook/

# WhatsApp Media Domain (for sending images - must be accessible by WPPConnect)
# استخدم عنوان IP المحلي بدلاً من localhost
WHATSAPP_MEDIA_DOMAIN=http://127.0.0.1:8000

# ============================================
# Redis Settings (Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# WhatsApp Cloud API (Future - Phase 2)
# ============================================
WHATSAPP_CLOUD_ACCESS_TOKEN=
WHATSAPP_CLOUD_PHONE_NUMBER_ID=
WHATSAPP_CLOUD_WEBHOOK_VERIFY_TOKEN=

# ============================================
# Email Settings (Optional)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/django.log
